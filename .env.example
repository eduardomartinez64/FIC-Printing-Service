# Gmail API Configuration
# Follow instructions in README.md to set up Gmail API credentials
# Download credentials.json from Google Cloud Console

# PrintNode Configuration
PRINTNODE_API_KEY=your_printnode_api_key_here
PRINTNODE_PRINTER_ID=your_printer_id_here

# Email Configuration
EMAIL_SUBJECT_FILTER=Batch Order Shipment Report
CHECK_INTERVAL_SECONDS=60
ERROR_NOTIFICATION_EMAIL=admin@example.com,stephen@sugarbearpro.com

# Shopify Configuration (for shipping export tool)
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_your_access_token_here
SHOPIFY_API_VERSION=2024-10
EXPORT_OUTPUT_DIR=exports

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/email_processor.log

# Error Notifications (comma-separated for multiple recipients)
ERROR_NOTIFICATION_EMAIL=your_email@example.com

# Daily Report Configuration
DAILY_REPORT_EMAIL=your_email@example.com
DAILY_REPORT_TIME=18:00  # 6 PM EST (time in EST)
